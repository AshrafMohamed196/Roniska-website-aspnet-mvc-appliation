                    </div>
                    <div class="col form-group">
                        <input type="email" asp-for="Email" class="form-control" name="email" id="email" placeholder="Your Email" required="">
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group mt-3">
                    <input type="text" asp-for="Subject" class="form-control" name="subject" id="subject" placeholder="Subject" required="">
                    <span asp-validation-for="Subject" class="text-danger"></span>

                </div>
                <div class="form-group mt-3">
                    <textarea class="form-control" asp-for="Message" name="message" rows="5" placeholder="Message" required=""></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>

                </div>
                <div class="my-3">
                    <div class="loading">Loading</div>
                    <div class="error-message"></div>
                    <div class="sent-message">Your message has been sent. Thank you!</div>
                </div>
                <div class="text-center"><button type="submit" class="bg-success">Send Message</button></div>
